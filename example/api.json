{
  "port": 3000,
  "logLevel": "info",
  "logFormat": "text",
  "endpoints": [
    {
      "method": "GET",
      "status": 200,
      "path": "/",
      "jsonPath": "./health-check.json"
    },
    {
      "method": "GET",
      "status": 200,
      "path": "/users",
      "jsonPath": "./users.json"
    },
    {
      "method": "GET",
      "status": 200,
      "path": "/user/:id",
      "jsonPath": "./user-detail.json"
    },
    {
      "method": "GET",
      "status": 200,
      "path": "/posts",
      "jsonPath": "./posts.json"
    },
    {
      "method": "GET",
      "status": 200,
      "path": "/posts/:id",
      "jsonPath": "./post-detail.json"
    },
    {
      "method": "GET",
      "status": 200,
      "path": "/users/:userId/posts/:postId",
      "jsonPath": "./user-post.json"
    },
    {
      "method": "POST",
      "status": 201,
      "path": "/users",
      "jsonPath": "./user-created.json"
    },
    {
      "path": "/static",
      "folder": "./static"
    }
  ]
}
